{% extends 'base.html.twig' %}

{% block title %}Buy Shares{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Buy Social Shares for {{ client.fullName }}</h2>
    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label>Current Capital</label>
                    <input type="text" class="form-control" value="{{ client.capital }} FCFA" disabled>
                </div>
                <div class="mb-3">
                    <label>Number of Shares</label>
                    <input type="number" name="quantity" class="form-control" min="1" required>
                </div>
                <div class="mb-3">
                    <label>Price per Share (FCFA)</label>
                    <input type="number" step="0.01" name="unit_price" class="form-control" value="1000" required>
                </div>
                <button type="submit" class="btn btn-success btn-lg">Purchase Shares</button>
                <a href="{{ path('shares_index') }}" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
{% endblock %}
